

import "math/rand"

func Revelelettres(mot string, nbLettres int) string {
	runes := []rune(mot)
	longueurMot := len(runes)

	if nbLettres > longueurMot {
		nbLettres = longueurMot
	}

	indicesReveles := map[int]bool{}
	for len(indicesReveles) < nbLettres {
		indice := rand.Intn(longueurMot)
		indicesReveles[indice] = true
	}

	resultat := ""
	for i, lettre := range runes {
		if indicesReveles[i] {
			resultat += string(lettre)
		} else {
			resultat += "_"
		}
	}
	return resultat
}
